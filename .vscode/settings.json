{
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },

  "typescript.enablePromptUseWorkspaceTsdk": true,
  "files.associations": {
    "*.json": "jsonc"
  },
  "cssVariables.lookupFiles": ["src/generated/tokens/primitives.css", "src/generated/tokens/semantics.css"],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
